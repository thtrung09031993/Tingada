<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameSettingProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingProfileFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:background="#E0E0E0">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            android:src="@drawable/rekkles4" />

    </LinearLayout>
    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:id="@+id/settingBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignTop="@+id/profileBtn"
        android:background="#FFFFFF"
        android:scaleType="fitXY"
        android:src="@drawable/settings" />

    <ImageView
        android:id="@+id/profileBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="74dp"
        android:background="#FFFFFF"
        android:scaleType="fitXY"
        android:src="@drawable/pencil" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/settingBtn"
        android:layout_marginBottom="40dp"
        android:text="Setting"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/editBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/profileBtn"
        android:layout_alignTop="@+id/textView6"
        android:text="Profile"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="186dp"
        android:text="Rekkles, 21"
        android:textSize="35dp"
        android:textStyle="bold" />


</RelativeLayout>