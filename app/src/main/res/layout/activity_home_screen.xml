<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".HomeActivity">


    <LinearLayout
        android:background="@color/tingada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_marginRight="30dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/user" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="@drawable/tingada_top"/>

        <ImageButton
            android:id="@+id/btnContact"
            android:layout_marginLeft="30dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/chat" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/txtStatus"
            android:paddingTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="italic"
            android:text="Hey, the winter is coming...\nAre you feeling lonely now?\n\nLet's go find your true love!"
            android:textColor="@color/tingada"
            android:textSize="22dp"
            />


        <Button
            android:id="@+id/btnFind"
            android:layout_marginTop="50dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Find Now"
            android:background="@drawable/round_button"
            android:padding="15dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="22dp"
            />

        <ImageView
            android:id="@+id/imgMagnifier"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/magnifier"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>